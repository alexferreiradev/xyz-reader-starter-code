<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="ArticleList" parent="Theme.App">

	</style>

	<style name="ArticleList.refreshLayout">
		<item name="android:layout_marginTop">@dimen/ab_height</item>
		<item name="android:padding">0dp</item>
	</style>

	<style name="ArticleList.recyclerView">
		<item name="android:clipToPadding">false</item>
		<item name="android:scrollbarStyle">outsideOverlay</item>
		<item name="android:layout_marginTop">@dimen/ab_height</item>
	</style>

	<style name="ArticleList.cardView">
		<!--// TODO ${DATE} - Degub - Don commit or push this-->
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">@dimen/min_margin</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:foreground">?selectableItemBackground</item>
	</style>

	<style name="ArticleList.articleImage">
		<item name="android:layout_width">@dimen/article_image_width</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:scaleType">centerCrop</item>
		<item name="android:layout_margin">@dimen/min_margin</item>
		<item name="android:padding">@dimen/min_padding</item>
		<item name="android:background">@android:color/background_dark</item>
	</style>

	<style name="ArticleList.articleTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">@dimen/min_margin</item>
		<item name="android:textColor">@color/theme_primary</item>
		<item name="android:textSize">@dimen/article_title_size</item>
		<item name="android:maxLines">@integer/article_title_max_line</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="ArticleList.articleSubTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">@dimen/min_margin</item>
		<item name="android:textColor">@color/texto_light</item>
		<item name="android:textSize">@dimen/article_subtitle_size</item>
		<item name="android:maxLines">@integer/article_title_max_line</item>
		<item name="android:ellipsize">end</item>
	</style>
</resources>